{
  "manifest_version": 3,
  "name": "Text Paste Extension",
  "version": "1.0",
  "description": "A simple Chrome extension for pasting text.",
  "permissions": ["activeTab", "scripting", "http://127.0.0.1:5001/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app/content.js"]
    }
  ],
  "action": {
    "default_popup": "app/popup.html",
    "default_icon": "images/icon16.png"
  }
}
